<%= simple_form_for(@physician, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name, :required => true %>
    <%= f.input :last_name, :required => true %>
    <%= f.input :middle_name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.input :admin, :required => true %>
    <%= f.hidden_field :organization_id, :value => current_user.organization_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Physician" %>
  </div>
<% end %>