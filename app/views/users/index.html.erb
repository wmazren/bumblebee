<div class="widget widget-table action-table">
  <div class="widget-header">
    <i class="icon-th-list"></i>
    <h3>All Users for: <%= current_user.organization.name %></h3>
  </div> <!-- /widget-header -->
    
  <div class="widget-content">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Email</th>
          <th>Type</th>
          <th>Admin</th>
          <th>Created At</th>
          <th>Last Edited At</th>
          <th>Login Count</th>
          <th>Last Sign In At</th>
          <th class="td-actions">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.type %></td>
            <td><%= user.admin %></td>
            <td><%= user.created_at.to_s(:datetime).humanize %></td>
            <td><%= user.updated_at.to_s(:datetime).humanize %></td>
            <td><%= user.sign_in_count %></td>
            <td><%if user.last_sign_in_at.blank? %>Never logged in<% else %><%= time_ago_in_words(user.last_sign_in_at.to_datetime)+' ago' %><% end %></td>
            <td class="td-actions">
              <%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %>
              <%= link_to 'Destroy', user, :data => { :confirm => 'Are you sure?' }, method: :delete, :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- /widget-content -->
</div> <!-- /widget --> 